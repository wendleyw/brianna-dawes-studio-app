# Supabase
# Get these values from: https://supabase.com/dashboard/project/<project-id>/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Authentication Secret (REQUIRED - CRITICAL SECURITY)
# Used for deriving deterministic passwords for Supabase Auth bridge
# MUST be at least 32 characters of random alphanumeric characters
# Generate with: openssl rand -hex 32
# WARNING: Changing this will invalidate all existing user sessions!
VITE_AUTH_SECRET=your-32-character-minimum-secret-here

# Miro
# Get from: https://miro.com/app/settings/user-profile/apps
VITE_MIRO_CLIENT_ID=your-miro-client-id

# Miro OAuth (Supabase Edge Functions)
# Configure these in Supabase secrets (not committed).
MIRO_CLIENT_ID=your-miro-client-id
MIRO_CLIENT_SECRET=your-miro-client-secret
MIRO_REDIRECT_URI=https://your-app-domain.com/auth/miro/oauth/callback
MIRO_WEBHOOK_SECRET=your-miro-webhook-secret
# 32-byte key, base64 or hex (64 chars). Used to encrypt tokens at rest.
MIRO_TOKEN_ENCRYPTION_KEY=your-32-byte-secret

# Main Admin (Super Admin - cannot be modified via UI)
VITE_ADMIN_EMAIL=admin@example.com
VITE_ADMIN_PASSWORD=your-secure-password-here

# Environment (development | production)
VITE_APP_ENV=development

# Feature flags (safe rollout)
VITE_USE_EDGE_API=0
VITE_USE_SYNC_JOBS=0
VITE_USE_DELIVERABLE_VERSIONS_TABLE=0
VITE_DISABLE_ANON_REST=0
